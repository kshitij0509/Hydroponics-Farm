<% layout("layouts/boilerplate") %>
<div class="mb-3"><h1>Add New Crop</h1></div>
 <form
      action="/farm/cropadded"
      method="POST"
    >
      <div class="mb-3">
        <label class="form-label" for="name">Name</label>
        <input
          class="form-control"
          type="text"
          id="name"
          name="crop[name]"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="ph">pH</label>
        <input
          class="form-control"
          type="text"
          id="ph"
          name="crop[ph]"
          required
        />
      </div>

