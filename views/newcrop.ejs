       <div class="mb-3">
        <label class="form-label" for="ec">Ec</label>
        <div class="input-group">
          <input
            type="text"
            class="form-control"
            id="ec"
            step="0.1"
            name="crop[ec]"
            required
          />
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="temperature">Temperature</label>
        <input
          class="form-control"
          type="text"
          id="temperature"
          name="crop[temperature]"
          required
        ></input>
      </div>
      <div class="mb-3">
        <button type="submit" class="btn-success">submit</button>
      </div>
