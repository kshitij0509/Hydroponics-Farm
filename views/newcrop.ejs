<% layout("layouts/boilerplate") %>

<div class="container">
  <h1 class="page-title">
    <i class="bi bi-seedling me-2"></i>Add New Crop
  </h1>
  
  <div class="form-container">
    <form action="/farm/cropadded" method="POST">
      <div class="mb-4">
        <label class="form-label fw-bold" for="name">
          <i class="bi bi-tag me-2 text-success"></i>Crop Name
        </label>
        <input class="form-control" type="text" id="name" name="crop[name]" placeholder="Enter crop name" required>
      </div>

      <div class="mb-4">
        <label class="form-label fw-bold" for="ph">
          <i class="bi bi-droplet me-2 text-info"></i>pH Level
        </label>
        <input class="form-control" type="number" step="0.1" id="ph" name="crop[ph]" placeholder="6.5" required>
      </div>

      <div class="mb-4">
        <label class="form-label fw-bold" for="ec">
          <i class="bi bi-lightning me-2 text-warning"></i>EC (Electrical Conductivity)
        </label>
        <input class="form-control" type="number" step="0.1" id="ec" name="crop[ec]" placeholder="1.2" required>
      </div>

      <div class="mb-4">
        <label class="form-label fw-bold" for="temperature">
          <i class="bi bi-thermometer-half me-2 text-danger"></i>Temperature (Â°C)
        </label>
        <input class="form-control" type="number" id="temperature" name="crop[temperature]" placeholder="25" required>
      </div>

      <div class="mb-4">
        <label class="form-label fw-bold" for="active">
          <i class="bi bi-power me-2 text-primary"></i>Crop Status
        </label>
        <select class="form-control" id="active" name="crop[active]" required>
          <option value="true">Active</option>
          <option value="false">Inactive</option>
        </select>
      </div>

      <div class="d-grid">
        <button type="submit" class="btn btn-success btn-lg">
          <i class="bi bi-check-circle me-2"></i>Add Crop
        </button>
      </div>
    </form>
  </div>
</div>