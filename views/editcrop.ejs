<% layout("layouts/boilerplate") %>

<div class="container">
  <h1 class="page-title">
    <i class="bi bi-pencil-square me-2"></i>Edit Crop Details
  </h1>
  
  <div class="form-container">
    <form action="/farm/edit/<%= crop._id %>?_method=PUT" method="POST">
      <div class="mb-4">
        <label class="form-label fw-bold" for="name">
          <i class="bi bi-tag me-2 text-success"></i>Crop Name
        </label>
        <input type="text" class="form-control" id="name" name="name" value="<%= crop.name %>" required>
      </div>

      <div class="mb-4">
        <label class="form-label fw-bold" for="ph">
          <i class="bi bi-droplet me-2 text-info"></i>pH Level
        </label>
        <input type="number" step="0.1" class="form-control" id="ph" name="ph" value="<%= crop.ph %>" required>
      </div>

      <div class="mb-4">
        <label class="form-label fw-bold" for="ec">
          <i class="bi bi-lightning me-2 text-warning"></i>EC (Electrical Conductivity)
        </label>
        <input type="number" step="0.1" class="form-control" id="ec" name="ec" value="<%= crop.ec %>" required>
      </div>

      <div class="mb-4">
        <label class="form-label fw-bold" for="temperature">
          <i class="bi bi-thermometer-half me-2 text-danger"></i>Temperature (Â°C)
        </label>
        <input type="number" step="0.1" class="form-control" id="temperature" name="temperature" value="<%= crop.temperature %>" required>
      </div>

      <div class="mb-4">
        <label class="form-label fw-bold" for="active">
          <i class="bi bi-power me-2 text-primary"></i>Crop Status
        </label>
        <select class="form-control" id="active" name="active" required>
          <option value="true" <%= crop.active ? 'selected' : '' %>>Active</option>
          <option value="false" <%= !crop.active ? 'selected' : '' %>>Inactive</option>
        </select>
      </div>

      <div class="d-flex gap-2">
        <button type="submit" class="btn btn-success flex-fill">
          <i class="bi bi-check-circle me-2"></i>Save Changes
        </button>
        <a href="/farm" class="btn btn-outline-secondary flex-fill">
          <i class="bi bi-x-circle me-2"></i>Cancel
        </a>
      </div>
    </form>
  </div>
</div>