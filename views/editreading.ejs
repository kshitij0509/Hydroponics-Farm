<% layout("layouts/boilerplate") %>
<style>
  body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f9;
    margin: 0;
    padding: 0;
  }

  h2 {
    text-align: center;
    color: #333;
    margin-top: 20px;
  }

  #cropForm {
    max-width: 600px;
    margin: 20px auto;
    padding: 20px;
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  label {
    font-weight: bold;
    margin-bottom: 5px;
    display: block;
    color: #555;
  }

  input[type="text"],
  input[type="number"],
  input[type="datetime-local"],
  input[type="file"],
  button {
    width: 100%;
    padding: 10px;
    margin: 10px 0;
    border: 1px solid #ccc;
    border-radius: 4px;
    font-size: 16px;
  }

  input[type="file"] {
    border: none;
  }

  button {
    background-color: #5cb85c;
    color: #fff;
    font-weight: bold;
    cursor: pointer;
    border: none;
    transition: background-color 0.3s ease;
  }

  button:hover {
    background-color: #4cae4c;
  }

  p {
    font-size: 14px;
    margin-top: 10px;
    color: #666;
  }

  img {
    max-width: 100%;
    height: auto;
    border-radius: 4px;
    margin-top: 10px;
  }

  .optional {
    font-size: 12px;
    color: #777;
  }
</style>
<body>
  <h2>Edit Crop Reading</h2>

  <form id="cropForm" action="/farm/editreading/<%= record.id %>?_method=PUT" method="POST" >
    <!-- Hidden input to store the crop reading id -->
    <input type="hidden" name="_id" value="<%= record.id %>">

    <div>
      <label for="name">Plant Name:</label>
      <input type="text" id="name" name="name" value="<%= record.name %>" required placeholder="Enter plant name">
    </div>
    <div>
      <label for="batch_no">Batch Number:</label>
      <input type="text" id="batch_no" name="batch_no" value="<%= record.batch_no %>" required placeholder="Enter batch number">
    </div>
    <div>
      <label for="datetime">Date & Time of Record:</label>
      <input type="datetime-local" id="datetime" name="datetime" value="<%= record.datetime %>" required>
    </div>
    <div>
      <label for="ph">pH Value:</label>
      <input type="number" step="0.1" id="ph" name="ph" value="<%= record.ph %>" required placeholder="e.g., 6.5">
    </div>
    <div>
      <label for="ec">Electrical Conductivity (EC):</label>
      <input type="number" step="0.1" id="ec" name="ec" value="<%= record.ec %>" required placeholder="e.g., 1.8">
    </div>
    <div>
      <label for="temperature">Temperature (Â°C):</label>
      <input type="number" id="temperature" name="temperature" value="<%= record.temperature %>" required placeholder="e.g., 25">
    </div>
    <div>
      <label for="photo">Upload Plant Photo <span class="optional">(optional)</span>:</label>
      <input type="file" id="photo" name="photo" accept="image/*">
      <% if (record.photo) { %>
        <p>Current Photo:</p>
        <img src="/uploads/<%= record.photo %>" alt="Current Photo">
      <% } %>
    </div>

    <button type="submit">Save Changes</button>
  </form>
</body>

